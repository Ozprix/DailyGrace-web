# This file is an example. Create a .env file in the root directory and add your keys.
# This .env file is used for LOCAL DEVELOPMENT ONLY.
# For production deployment on Firebase App Hosting, these keys must be set as "secrets"
# in the Google Cloud Secret Manager.

# --- Firebase Project Configuration (Client-side) ---
# These are safe to be public and are used by the frontend.
# Get these from your Firebase project settings -> General -> Your apps -> Firebase SDK snippet -> Config.
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# --- Firebase PWA/FCM Configuration (Client-side) ---
# Get this from Firebase project settings -> Cloud Messaging -> Web configuration -> Web Push certificates -> Key pair
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_fcm_web_push_certificate_key_pair

# --- Genkit/Google AI (Server-side SECRET) ---
# IMPORTANT: For production, this should NOT be in a .env file.
# It must be set as a secret in Google Cloud Secret Manager.
GOOGLE_API_KEY=your_google_ai_api_key

# --- Stripe (Server-side SECRET - for future use) ---
# IMPORTANT: For production, this should NOT be in a .env file.
# It must be set as a secret in Google Cloud Secret Manager.
# These are conceptual placeholders as the Stripe feature is not fully active.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PREMIUM_PRICE_ID_MONTHLY=your_stripe_monthly_price_id
